{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",              // Set rootDir to src
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true   // Enable importing .ts extensions
  },
  "include": [
    "src/**/*.ts",                // Include all .ts files in src/
    "index.ts"                     // Include index.ts in root
  ]
}
