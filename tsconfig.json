{
  "compilerOptions": {
    "target": "ES2022",                       // Modern JS output
    "module": "ES2022",                       // Native ES modules
    "moduleResolution": "Node",               // Resolve modules like Node.js
    "outDir": "dist",                         // Compile output directory
    "rootDir": "src",                         // Source code root directory
    "esModuleInterop": true,                  // Enable default import interop with CommonJS
    "allowSyntheticDefaultImports": true,    // Allows default imports from modules without default exports
    "resolveJsonModule": true,                // Import JSON files
    "sourceMap": true,                        // Generate source maps
    "forceConsistentCasingInFileNames": true,// Prevent casing discrepancies
    "strict": true,                           // Enable all strict type-checking options
    "skipLibCheck": true                      // Skip type checking of declaration files for faster builds
  },
  "include": ["src"]
}
